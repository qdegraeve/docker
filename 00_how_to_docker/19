echo 'FROM python:2.7-slim

WORKDIR /app

ADD . /app

RUN pip install flask

EXPOSE 3000

CMD ["python", "app.py"]' > Dockerfile

echo 'from flask import Flask

app = Flask(__name__)

@app.route("/")
def hello():
	return "<h1>Hello World</h1>"

if __name__ == "__main__":
	app.run(debug=True, host="0.0.0.0", port=3000)' > app.py

docker build -t abarthur .
docker run -d --name Abarthur -p 3000:3000 abarthur
rm app.py Dockerfile
